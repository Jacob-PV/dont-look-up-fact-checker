# Database Configuration
DATABASE_URL=postgresql://factcheck:changeme_secure_password@postgres:5432/factcheck
DB_PASSWORD=changeme_secure_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Ollama Configuration (CRITICAL - Server-side only, never expose to frontend)
OLLAMA_API_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama2

# Security Configuration
SECRET_KEY=changeme_random_secret_key_min_32_characters_long
API_KEY_SALT=changeme_random_salt_min_16_characters

# Rate Limiting Configuration
RATE_LIMIT_FREE_TIER=100
RATE_LIMIT_PRO_TIER=1000
RATE_LIMIT_ENTERPRISE_TIER=10000

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# News Ingestion Configuration
RSS_FETCH_INTERVAL_MINUTES=30
ARTICLE_EXTRACTION_TIMEOUT_SECONDS=30
MAX_ARTICLE_AGE_DAYS=90

# Vector Search Configuration
FAISS_INDEX_PATH=./faiss_index
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# PII Detection Configuration
PII_DETECTION_ENABLED=False
PII_DETECTION_CONFIDENCE_THRESHOLD=0.7
